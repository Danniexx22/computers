{% extends 'base.html.twig' %}

{% block title %}Modelo index{% endblock %}

{% block contenido %}
    <h1>Modelo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Ram</th>
                <th>Harddisk</th>
                <th>Procesor</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modelo in modelos %}
            <tr>
                <td>{{ modelo.id }}</td>
                <td>{{ modelo.name }}</td>
                <td>{{ modelo.ram }}</td>
                <td>{{ modelo.harddisk }}</td>
                <td>{{ modelo.procesor }}</td>
                <td>
                    <a href="{{ path('modelo_show', {'id': modelo.id}) }}">show</a>
                    <a href="{{ path('modelo_edit', {'id': modelo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('modelo_new') }}">Create new</a>
{% endblock %}