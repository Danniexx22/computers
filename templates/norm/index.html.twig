{% extends 'base.html.twig' %}

{% block title %}Norm index{% endblock %}

{% block body %}
    <h1>Norm index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for norm in norms %}
            <tr>
                <td>{{ norm.id }}</td>
                <td>{{ norm.descripcion }}</td>
                <td>
                    <a href="{{ path('norm_show', {'id': norm.id}) }}">show</a>
                    <a href="{{ path('norm_edit', {'id': norm.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('norm_new') }}">Create new</a>
{% endblock %}